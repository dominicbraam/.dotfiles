#! /bin/sh

wmname LG3D
# export _JAVA_AWT_WM_NONREPARENTING=1

$HOME/.config/polybar/launch.sh
# "$HOME/.config/picom/launch.sh"
dunst &

pgrep -x sxhkd >/dev/null || sxhkd &

# Desktop
bspc monitor DP-2 -d 1 2 3 4 5
bspc monitor DP-3 -d 6 7 8 9 0

# Laptop
# bspc monitor eDP1 -d 1 2 3 4 5 6 7 8 9 0

bspc config top_padding 0

bspc config window_gap 10

bspc config focused_border_color "#353b45"
# bspc config normal_border_color "#11121D"
bspc config border_width 2
bspc config borderless_monocle true

bspc config split_ratio 0.50
bspc config gapless_monocle false

# bspc rule -a gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^9'
bspc rule -a Cider desktop='^9' follow=on
bspc rule -a discord desktop='^4' follow=off
bspc rule -a mpv desktop='^9' follow=on
bspc rule -a Pavucontrol state=floating sticky=on
bspc rule -a openrgb state=floating sticky=on
bspc rule -a Nitrogen state=floating sticky=on
bspc rule -a Pcmanfm state=floating sticky=on
bspc rule -a Cider state=floating sticky=on
bspc rule -a mpv state=floating sticky=on

# custom configs
bspc config pointer_modifier mod1
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action2 resize_corner
bspc config focus_follows_pointer false

# launch programs
$HOME/.dotfiles/custom_scripts/launch_at_start.sh &
