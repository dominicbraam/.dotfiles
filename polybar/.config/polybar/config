[global-wm]
include-file = $HOME/.config/polybar/catppuccin

[bar/dominicbar]
tray-position = right
monitor = DP-2
width =  100%
height = 30
padding-left = 1
padding-right = 1
background = ${colors.background}
foreground = ${colors.foreground}
bottom = false
border-top-size = 7
border-bottom-size = 7
border-top-color = ${colors.background}
border-bottom-color = ${colors.background}
line-size = 5
wm-restack = bspwm
modules-left = round-left bspwm round-right
modules-center = round-left xwindow round-right
modules-right =  round-left pulseaudio battery-headset cpu temperature temperature-gpu mem time
font-0 = Hack Nerd Font:style=Bold:pixelsize=11;2
font-1 = JetBrainsMono Nerd Font:size=19;4
font-2 = Material Design Icons:style=Bold:size=11;2
font-3 = unifont:fontformat=truetype:size=10:antialias=true;

